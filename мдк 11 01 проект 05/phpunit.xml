<?xml version="1.0" encoding="UTF-8"?>
<phpunit
    bootstrap="vendor/autoload.php"
    colors="true"
    beStrictAboutTestsThatDoNotTestAnything="false"
>
    <testsuites>
        <testsuite name="Validation">
            <directory suffix="Test.php">tests_phpunit/Validation</directory>
        </testsuite>
        <testsuite name="Registration">
            <directory suffix="Test.php">tests_phpunit/Registration</directory>
        </testsuite>
        <testsuite name="Login">
            <directory suffix="Test.php">tests_phpunit/Login</directory>
        </testsuite>
        <testsuite name="PasswordReset">
            <directory suffix="Test.php">tests_phpunit/PasswordReset</directory>
        </testsuite>
    </testsuites>

    <php>
        <env name="APP_ENV" value="testing"/>
    </php>
</phpunit>



